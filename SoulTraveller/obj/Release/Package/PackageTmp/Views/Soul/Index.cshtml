@model List<Sw.Base.Entity.Souler>
@{
    ViewBag.Title = "心灵旅客|来一口,就可以改变世界";
    Layout = "~/Views/Shared/Layout.cshtml";

    ViewBag.PageType = "Index";
}

<script src="~/Scripts/index.js"></script>
<div class="container" page="2">
    @foreach (var item in Model)
    {
        <article sid="@item.Id" class="item">
            <header style="background-color:@item.Colors">@item.Title</header>
            <aside>
                <img src="@item.Img">
                <input class="audiosrc" type="hidden" value="@item.Audio" />
                <i class="fa fa-play-circle-o fa-3x playicon"></i>
            </aside>
            <footer>
                <table>
                    <tr>
                        <td colspan="4" class="des">
                            @item.Summary
                        </td>
                    </tr>
                    <tr sid="@item.Id">
                        <td>
                            <i class="fa fa-comments" comments> 评论(@item.Comment)</i>
                        </td>
                        <td>
                            <i class="fa fa-share-alt" shares> 分享(@item.Shared)</i>
                        </td>
                        <td>
                            <i class="fa fa-heart" views> 浏览(@item.Views)</i>
                        </td>
                        <td>
                            <i class="fa fa-thumbs-up" applaud> 赞(@item.Applaud)</i>
                        </td>
                    </tr>
                </table>
            </footer>
        </article>
    }
</div>
<div class="loading">
    <i class="fa fa-spinner fa-spin"></i>
    <span>精彩马上到，请耐心等待...</span>
</div>
<script src="~/Scripts/soul.js"></script>
